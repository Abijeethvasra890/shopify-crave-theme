{% schema %}
{
  "name": "Custom Image with Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    }
  ]
}
{% endschema %}

<div class="custom-image-with-text">
  <h2>{{ section.settings.text }}</h2>
  <img src="{{ section.settings.image | img_url: 'master' }}" alt="Image" width="100%" height="auto">
</div>
